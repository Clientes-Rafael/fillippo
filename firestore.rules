rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura pública de la metadata de categorías
    match /_categoriesMeta/{categoryId} {
      allow read: if true;
      // Permitir actualización del campo order para el admin
      allow write: if request.auth != null;
    }
    
    // Permitir lectura y escritura pública de todos los ítems del menú
    match /{categoryCollection}/{itemId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
